#!/bin/sh
RHIZO_SCRIPT="/home/rhizomatica/bin"

function logc() {
    txt=$1
    echo "[`date '+%d-%m-%Y %H:%M:%S'`] $txt" >> $LOGFILE
}

#BTSs IP addresses

<% if @bts1_ip_address -%>
BTS1=<%= @bts1_ip_address %>
<% end -%>
<% if @bts2_ip_address -%>
BTS2=<%= @bts2_ip_address %>
<% end -%>
<% if @bts3_ip_address -%>
BTS3=<%= @bts3_ip_address %>
<% end -%>

LATENCY_HOST=<%= @latency_check_address %>
STAT_DISK=<%= @stats_disk %>
